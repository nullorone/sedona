      li.hotels-list__item.hotel
        picture.hotel__img
          source(srcset="img/hotel-villas.webp, img/hotel-villas@2x.webp 2x", type="image/webp")
          img(src="img/hotel-villas.jpg", srcset="img/hotel-villas@2x.jpg 2x", alt="Villas at Poco Diablo", width="135", height="90")
        .hotel__wrapper
          .hotel__descr-wrapper
