          .hotel__raiting-wrapper
            .hotel__raiting-stars
              img.hotel__star-img(src="img/star.svg", alt="Иконка звезды отелю", width="18", height="18")
              img.hotel__star-img(src="img/star.svg", alt="Иконка звезды отелю", width="18", height="18")
            .hotel__raiting-text
